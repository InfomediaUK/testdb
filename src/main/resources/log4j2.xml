<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
	  <Property name="log-path">${env:OPENSHIFT_LOG_DIR}</Property>
	  <Property name="log-file-name">${env:OPENSHIFT_APP_NAME}</Property>
	  <Property name="console-pattern">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
	  <Property name="file-pattern">%d{dd MMM yyyy HH:mm:ss,SSS} - %-5level %logger{36}: %m%n</Property>
	</Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${console-pattern}" />
        </Console>
		<RollingFile name="RollingFile" fileName="${log-path}/${log-file-name}.log" filePattern="${log-path}/${log-file-name}-%i.log" immediateFlush="true" >
			<PatternLayout>
			    <pattern>${file-pattern}</pattern>
			</PatternLayout>
			<Policies>
			    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			    <SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="3"/>
		</RollingFile>
		<RollingFile name="RollingFileStruts" fileName="${log-path}/struts.log" filePattern="${log-path}/struts-%i.log" immediateFlush="true" >
			<PatternLayout>
			    <pattern>${file-pattern}</pattern>
			</PatternLayout>
			<Policies>
			    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			    <SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="3"/>
		</RollingFile>
		<RollingFile name="RollingFileSpring" fileName="${log-path}/spring.log" filePattern="${log-path}/spring-%i.log" immediateFlush="true" >
			<PatternLayout>
			    <pattern>${file-pattern}</pattern>
			</PatternLayout>
			<Policies>
			    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			    <SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="3"/>
		</RollingFile>
		<RollingFile name="RollingFileHelmet" fileName="${log-path}/helmet.log" filePattern="${log-path}/helmet-%i.log" immediateFlush="true" >
			<PatternLayout>
			    <pattern>${file-pattern}</pattern>
			</PatternLayout>
			<Policies>
			    <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
			    <SizeBasedTriggeringPolicy size="1 MB" />
			</Policies>
			<DefaultRolloverStrategy max="3"/>
		</RollingFile>
    </Appenders>
    <Loggers>
        <Root level="all">
            <AppenderRef ref="Console" />
            <AppenderRef ref="RollingFile"/>
        </Root>
        <Logger name="org.apache.commons" level="OFF" additivity="false">
            <AppenderRef ref="Console" level="DEBUG" />
        </Logger>
        <Logger name="org.apache.struts.action" level="DEBUG" additivity="false">
            <AppenderRef ref="RollingFileStruts" level="DEBUG" />
        </Logger>
        <Logger name="org.springframework" level="DEBUG" additivity="false">
            <AppenderRef ref="RollingFileSpring" level="DEBUG" />
        </Logger>
        <Logger name="com.helmet" level="DEBUG" additivity="false">
            <AppenderRef ref="RollingFileHelmet" level="DEBUG" />
        </Logger>
    </Loggers>
</Configuration>